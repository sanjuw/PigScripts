<?xml version="1.0"?>
<project name="myHadoop" default="build-jar" basedir="." >
	<property name="src" value="."/>
	<property name="build" value="build"/>
	<property name="external-1" value="/opt/cloudera/parcels/CDH-4.6.0-1.cdh4.6.0.p0.26/lib/pig"/>

        <path id="project.classpath">
	         <fileset dir="${external-1}">
		   <include name="*.jar"/>
		 </fileset>
	</path>

	<target name="init">
		<mkdir dir="${build}"/>
		<javac destdir="${build}">
		  <src path="${src}"/>
		  <classpath refid="project.classpath"/>
		</javac>
	</target>

	<target name="build-jar" depends="init"> 
		<jar basedir="${build}" destfile="${src}/LEVENSHTEIN_DIST.jar">
			<manifest>
				<attribute name="Main-Class" value="LEVENSHTEIN_DIST"/>
			</manifest>
		</jar>
	</target>
		
</project>
